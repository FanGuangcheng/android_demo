<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.guangchengfan.myview.recycleview.RecycleActivity">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="200dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btn_show_grid_recycle_view"
                android:text="展示gridRecycleView"
                android:layout_marginTop="2dp"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btn_show_linear_recycle_view"
                android:text="展示linearRecycleView"
                android:layout_marginTop="2dp"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btn_show_stagger_grid_recycle_view"
                android:text="展示staggedGridRecycleView"
                android:layout_marginTop="2dp"/>

        </LinearLayout>
    </ScrollView>

    <include layout="@layout/recycle_filter"/>
    <include layout="@layout/staggered_grid_layout"/>
</FrameLayout>
