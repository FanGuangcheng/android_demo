<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >
    <LinearLayout
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:orientation="vertical"
        tools:context="com.example.guangchengfan.myview.OldMainActivity">

        <Button
            android:text="小图标，扩大点击区域"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_small_icon"
            android:layout_marginBottom="10dp"/>

        <Button
            android:text="activity 销毁重建"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_restore_activity"
            android:layout_marginBottom="10dp"/>

        <Button
            android:text="ConstraintLayout的使用"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_constraint_layout"
            android:layout_marginBottom="10dp"/>


        <Button
            android:text="二维码页面"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_qrcode_activity"
            android:layout_marginBottom="10dp"/>

        <Button
            android:text="BRVAHRecycleViewActivity 通用adapter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_brvah_recycle_view"
            android:layout_marginBottom="10dp"/>

        <Button
            android:text="CoordinatorLayout 协调布局之Behavior"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_coor_behavior"
            android:layout_marginBottom="10dp"/>

        <Button
            android:text="SlidingTablayout view 测试"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_sliding_tab_layout"
            android:layout_marginBottom="10dp"/>


        <Button
            android:text="ViewPager2 轮播测试"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_viewpager2_loop"
            android:layout_marginBottom="10dp"/>


        <Button
            android:text="ImageView 加载超大图"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_img_load_big"
            android:layout_marginBottom="10dp"/>

        <Button
            android:text="webview加载"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_webview_load"
            android:layout_marginBottom="10dp"/>


        <Button
            android:text="viewpager2 Demo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_viewpager2_demo"
            android:layout_marginBottom="10dp"/>

        <Button
            android:text="recyclerView 长按排序"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_swap_act"
            android:layout_marginBottom="10dp"/>

    </LinearLayout>
</ScrollView>
